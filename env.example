# ===========================================
# Telegram Bot Template - Переменные окружения
# ===========================================
# Скопируйте этот файл в .env и заполните реальными значениями
# cp .env.example .env

# ===========================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА
# ===========================================

# Токен Telegram бота (обязательно)
BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# ID проекта Google Cloud (обязательно для Firestore)
PROJECT_ID=YOUR_GOOGLE_CLOUD_PROJECT_ID_HERE

# ===========================================
# GOOGLE CLOUD CREDENTIALS
# ===========================================

# Путь к файлу учетных данных Google Cloud (для локальной разработки)
# Оставьте пустым, если используете GOOGLE_APPLICATION_CREDENTIALS_JSON
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-cloud-credentials.json

# JSON содержимое учетных данных Google Cloud (для Cloud Run)
# Альтернатива GOOGLE_APPLICATION_CREDENTIALS для облачного развертывания
GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# ===========================================
# GOOGLE CLOUD НАСТРОЙКИ
# ===========================================

# Регион Google Cloud (по умолчанию: asia-southeast1)
GOOGLE_CLOUD_LOCATION=asia-southeast1

# Имя базы данных Firestore (по умолчанию: default)
FIRESTORE_DATABASE=default

# Имя bucket в Google Cloud Storage для хранения шаблонов
STORAGE_BUCKET_NAME=docbot-templates

# ===========================================
# WEBHOOK И СЕТЕВЫЕ НАСТРОЙКИ
# ===========================================

# URL для webhook (для Cloud Run)
WEBHOOK_URL=https://your-service-url.run.app

# URL сервиса для keep-alive (для Cloud Run)
SERVICE_URL=https://your-service-url.run.app

# Порт для локального запуска (по умолчанию: 8080)
PORT=8080

# ===========================================
# CLOUD RUN НАСТРОЙКИ
# ===========================================

# Регион Cloud Run (автоматически устанавливается Cloud Run)
K_REGION=us-central1

# Имя сервиса Cloud Run (автоматически устанавливается Cloud Run)
K_SERVICE=telegram-bot-template

# ID проекта Google Cloud (автоматически устанавливается Cloud Run)
GOOGLE_CLOUD_PROJECT=your-google-cloud-project-id

# ===========================================
# НАСТРОЙКИ AI МОДЕЛИ
# ===========================================

# API ключ Google Gemini (обязательно для AI функций)
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# Режим анализа Gemini (debug или production)
GEMINI_ANALYSIS_MODE=production

# ===========================================
# РАЗРАБОТКА И ОТЛАДКА
# ===========================================

# Включить режим отладки (true/false)
DEBUG=false

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO